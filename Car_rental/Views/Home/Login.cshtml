<div class="row" id="login-div">
    <div class="col-sm-4 col-sm-offset-4">
        @using (Html.BeginForm("Autherize", "Home", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
        <div class="form-group">
            @Html.LabelFor(m => m.Login)
            <div class="input-group">
                <span class="input-group-addon"><span class="fa fa-envelope fa-fw"></span></span>
                @Html.TextBoxFor(m => m.Login, new { placeholder = Html.DisplayNameFor(m => m.Login), @class = "form-control" })
            </div>
            @Html.ValidationMessageFor(m => m.Login)
        </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Haslo)
                <div class="input-group">
                    <span class="input-group-addon"><span class="fa fa-lock fa-fw"></span></span>
                    @Html.PasswordFor(m => m.Haslo, new { placeholder = Html.DisplayNameFor(m => m.Haslo), autocomplete = "off", @class = "form-control" })
                </div>
                @Html.ValidationMessageFor(m => m.Haslo)
            </div>
            <div class="form-group text-center">
                <button type="submit" class="btn btn-success"><span class="fa fa-check fa-fw"></span>&nbsp;Zaloguj</button>
            </div>
        }
    </div>
    </div>

